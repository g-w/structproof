\ProvidesPackage{structproof}[2008/06/24 v0.01]

\usepackage{amsthm}

\newcounter{claimcount}

\newenvironment{claim}{\par
  \normalfont \topsep6\p@\@plus6\p@\relax\addtocounter{claimcount}{1}
  \begin{trivlist}
  \item[\hskip 5pt \it(\arabic{claimcount})]\it 
}
{\end{trivlist}}

\newenvironment{proofclaim}{\par
  \normalfont \topsep6\p@\@plus6\p@\relax
  \begin{trivlist}
  \item[\hskip 5pt \textit{Proof} \arabic{claimcount}.]
}
{\leavevmode\unskip\penalty9999 \hbox{}\nobreak\hfill
\quad\hbox{\textit{qed(\arabic{claimcount})}}
\end{trivlist}}

\newenvironment{structproof}
{\setcounter{claimcount}{0}\begin{proof}}
{\end{proof}}


